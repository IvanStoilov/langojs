{
  "name": "langojs",
  "version": "1.0.0",
  "description": "Translation management tool with GUI, CLI, and AI-powered auto-translation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./bin/langojs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "dev": "concurrently -k -n vite,server -c cyan,green \"vite --port=4401\" \"nodemon\"",
    "dev:server": "nodemon",
    "build": "tsc -p tsconfig.build.json && vite build",
    "serve": "node dist/cli.js",
    "preview": "vite preview"
  },
  "nodemonConfig": {
    "watch": [
      "src/server",
      "src/cli.ts",
      "src/types",
      "src/index.ts"
    ],
    "ext": "ts",
    "exec": "tsx src/cli.ts serve --no-open"
  },
  "keywords": [
    "translation",
    "i18n",
    "internationalization",
    "localization"
  ],
  "license": "MIT",
  "packageManager": "yarn@4.6.0",
  "dependencies": {
    "@ai-sdk/openai": "^3.0.33",
    "ai": "^6.0.98",
    "commander": "^14.0.3",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "glob": "^13.0.6",
    "open": "^11.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@preact/preset-vite": "^2.10.3",
    "@preact/signals": "^2.8.1",
    "@tailwindcss/postcss": "^4.2.1",
    "@types/babel__core": "^7",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/glob": "^9.0.0",
    "@types/node": "^25.3.0",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.14",
    "postcss": "^8.5.6",
    "preact": "^10.28.4",
    "tailwindcss": "^4.2.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
